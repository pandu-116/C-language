#include<stdio.h>
int main()
{
    int a,b,c=0,d=0,i;
    scanf("%d",&a);
    for(i=0;i<a;i++)
    {
        scanf("%d",&b);
        if(b>0)
        {
            c=c+b;
        }
        else
        {
            if(c==0)
            {
                d++;
            }
            else
            {
                c--;
            }
        }
    }
    printf("%d",d);
    return 0;
}
